<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="2dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inp_imie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ImiÄ™"
            android:inputType="text"
            android:minHeight="48dp"
            tools:ignore="Autofill,HardcodedText" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inp_nazwisko"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nazwisko"
            android:inputType="text"
            android:minHeight="48dp"
            tools:ignore="Autofill,HardcodedText" />

        <EditText
            android:id="@+id/inp_wiek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Wiek"
            android:inputType="number"
            android:minHeight="48dp"
            tools:ignore="Autofill,HardcodedText" />

        <EditText
            android:id="@+id/inp_wzrost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Wzrost (cm)"
            android:inputType="number"
            android:minHeight="48dp"
            tools:ignore="Autofill,HardcodedText" />

        <EditText
            android:id="@+id/inp_waga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Waga (kg)"
            android:inputType="number"
            android:minHeight="48dp"
            tools:ignore="Autofill,HardcodedText" />

        <Button
            android:id="@+id/btn_zapisz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="zapisz"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn_ekran_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ekran 2"
            tools:ignore="HardcodedText" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>